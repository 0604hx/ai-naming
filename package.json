{
    "workspaces": [
        "packages/**",
        "server",
        "app",
        "!**/test/**",
        "!**/dist/**"
    ],
    "name": "ai-naming",
    "type": "module",
    "private": true,
    "scripts": {
        "serve": "bun --cwd server dev",
        "serve:init": "bun --cwd server dev --init",
        "serve:config": "bun --cwd server dev --config",
        "serve:db": "bun --cwd server dev --db",
        "serve:build": "bun --cwd server build",
        "app:h5": "bun --cwd app dev:h5",
        "app:h5:build": "bun --cwd app build:h5",
        "app:h5:build:dev": "bun --cwd app build:h5:dev",
        "app:weapp": "bun --cwd app dev:weapp",
        "app:weapp:build": "bun --cwd app build:weapp",
        "app:mp": "bun --cwd app dev:weapp",
        "app:mp:build": "bun --cwd app build:weapp",
        "zip": "bun --cwd app zip:h5"
    },
    "dependencies": {
        "@dcloudio/types": "^3.4.28",
        "adm-zip": "^0.5.16",
        "picocolors": "^1.1.1",
        "sm-crypto": "^0.3.13"
    },
    "devDependencies": {
        "@types/bun": "^1.3.3"
    }
}